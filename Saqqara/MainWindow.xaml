<Window x:Class="BibliotecaUniversidadDeSaqqara.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotecaUniversidadDeSaqqara"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1500" MinHeight="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MaxWidth="300" MinWidth="200"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0" SelectionChanged="ListView_SelectionChanged" MaxWidth="300">
            <ListViewItem x:Name="ListViewItem_ArticulosPublicados"  Content="Artículos publicados" FontSize="20" Height="60" />
            <ListViewItem x:Name="ListViewItem_EvaluacionDeArticulos" Content="Evaluación de artículos" FontSize="20" Height="60" />
            <ListViewItem Content="Liberación de artículo" FontSize="20" Height="60" />
            <ListViewItem Content="Artículos rechazados" FontSize="20" Height="60" />
        </ListView>
        <Grid x:Name="MainGrid" Grid.Column="1"/>
    </Grid>
</Window>
